<div class="col-md-6 col-md-offset-3">
	<div id="pics" class="transition-enabled">
		<% @pics.each do |pic| %>
		<div class="box panel panel-default">
				<h2><%= link_to pic.title, pic %></h2>
				<p><%= link_to (image_tag pic.image.url(:medium)), pic %></p>
				<p><%= pic.description %></p>
				<p><%= time_ago_in_words(pic.created_at) %> ago</p>
			</div>
		<% end %>
		<%= link_to "New Pic", new_pic_path %>
	</div>
</div>